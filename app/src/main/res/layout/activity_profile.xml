<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7F7F7">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#14a5b0"
        android:elevation="4dp"
        android:theme="@style/ToolBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout android:layout_below="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible" >
        <TextView android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="Email"/>
        <EditText android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#87000000"
            android:editable="false"
            android:enabled="false"/>

        <TextView android:id="@+id/lblFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="First Name"
            android:layout_marginTop="24dp"/>
        <EditText android:id="@+id/txtFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#87000000"
            android:singleLine="true"/>

        <TextView android:id="@+id/lblLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="Last Name"
            android:layout_marginTop="24dp"/>
        <EditText android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#87000000"
            android:singleLine="true"/>

        <TextView android:id="@+id/lblPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="Phone Number"
            android:layout_marginTop="24dp"/>
        <EditText android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#87000000"
            android:singleLine="true"
            android:inputType="number"/>

        <TextView android:id="@+id/lblTanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:text="Tanggal Lahir"
            android:layout_marginTop="24dp"/>
        <EditText android:id="@+id/txtTanggalLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#87000000"
            android:editable="false"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/linLogOut"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_button_call"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <TextView android:id="@+id/txtLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Log Out" />
    </LinearLayout>

</RelativeLayout>
