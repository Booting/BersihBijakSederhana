<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    /*** Menu ***/
    <TextView android:id="@+id/lblMenu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:text="MENU"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textColor="#8A000000"/>

    /*** Profile ***/
    <RelativeLayout android:id="@+id/relProfile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">
        <ImageView android:id="@+id/imgProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_account_circle"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"/>
        <TextView android:id="@+id/lblProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#DE000000"
            android:textSize="16sp"
            android:text="View Profile"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    /*** Module ***/
    <RelativeLayout android:id="@+id/relModule"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">
        <ImageView android:id="@+id/imgModule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_view_module"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"/>
        <TextView android:id="@+id/lblModule"
            android:layout_toRightOf="@+id/imgModule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#DE000000"
            android:textSize="16sp"
            android:text="View Module"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>